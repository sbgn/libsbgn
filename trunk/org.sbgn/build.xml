<?xml version="1.0"?>
<project name="org.sbgn" default="dist" basedir=".">

  <!-- always be java 1.5 compatible -->
  <property name="ant.build.javac.target" value="1.5"/>
  <property name="ant.build.javac.source" value="1.5"/>
	
  <property name="jar.name" value="../dist/org.sbgn.jar"/>
  <property name="sbgn.xsd" value="../resources/SBGN.xsd"/>
  
  <target name="prepare">
	<tstamp /> <!-- set ${TODAY} and ${TSTAMP} -->
	<mkdir dir="build"/>
	<mkdir dir="gensrc"/>
	<mkdir dir="../dist"/>
  </target>


	<path id="project.classpath">
		<fileset dir="lib">
			<include name="*.jar"/>
		</fileset>
	</path>

	<!-- JAXB compiler task definition -->
	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask" classpathref="project.classpath"/>

  <target name="jaxb" depends="prepare">
	<xjc schema="${sbgn.xsd}" destdir="gensrc" package="org.sbgn.bindings">
		<produces dir="${generated-src.dir}" includes="**/*.java" />
	</xjc>
  </target>
  
  <target name="build" depends="jaxb">
	<javac srcdir="gensrc"
		   includes="**"
		   debug="true"
		   destdir="build">
	</javac>
	<javac srcdir="src"
		   includes="**"
		   debug="true"
		   destdir="build">
	</javac>
  </target>
  
  <target name="jar" depends="build">
	<jar jarfile="${jar.name}">
	  <fileset dir="build" includes="**/*.class"/>
	  <fileset dir="src" includes="**/*.properties"/>
	</jar>
  </target>

  <target name="clean">
	<delete dir="build"/>
	<delete dir="gensrc"/>
  </target>

  <target name="dist-clean" depends="clean">
	<delete file="${jar.name}"/>
  </target>

  <target name="dist" depends="jar"/>

  	<taskdef resource="checkstyletask.properties"
			 classpath="build-lib/checkstyle-all-5.0.jar"/>
			 
	<target name="test" depends="build">
		<path id="test.classpath">
			<pathelement location="build"/>
			<pathelement location="build-lib/junit.jar"/>
			<pathelement location="build-lib/measure.jar"/>
		</path>
		<javac srcdir="test" debug="true" 
					includes="**"
					destdir="build"
					source="1.5">
			<classpath refid="test.classpath"/>
		</javac>		
		<junit printsummary="on" haltonfailure="true" fork="true">
			<formatter type="brief" usefile="false"/>
			<classpath refid="test.classpath"/>
			<batchtest>
				<fileset dir="test">
					<include name="**/*Test*.java"/>
				</fileset>
			</batchtest>
		</junit>
	</target>

	<target name="checkstyle">
		<checkstyle config="checks.xml">
			<fileset dir="src">
				<include name="**/*.java"/>
			</fileset>
			<formatter toFile="${checkstyle.output.file}"/>
		</checkstyle>	
	</target>

</project>
